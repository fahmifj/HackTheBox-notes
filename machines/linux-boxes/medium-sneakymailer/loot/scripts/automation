root@sneakymailer:/etc/systemd/system# cat bot-imap-user.service
[Unit]
After=network.target

[Service]
Type=simple
Restart=always
User=vmail
ExecStartPre=/bin/sleep 10
ExecStart=/home/vmail/venv/bin/python /opt/scripts/vmail/imap-user-login.py

